# ifndef FRAGTRAP_HPP
#define FRAGTRAP_HPP

#include <iostream>

class FragTrap {

private:

	int			hitPts;
	int			maxHitPts;
	int			energyPts;
	int			maxEneryPts;
	int			level;
	int			meleeDmg;
	int			rangedDmg;
	int			armorDmgReduction;
	std::string name;

public:

	void rangedAttack(std::string const & target);
	void meleeAttack(std::string const & target);
	void takeDamage(unsigned int amount);
	void beRepaired(unsigned int amount);

};

#endif
